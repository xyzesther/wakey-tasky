generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                     String     @id @default(uuid())
  tasks                  MainTask[]
}

model MainTask {
  id          String      @id @default(uuid())
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
  title       String
  duration    Int?
  subtasks    Subtask[]
  status      TaskStatus  @default(PENDING)
}

model Subtask {
  id          String      @id @default(uuid())
  taskId      String
  task        MainTask    @relation(fields: [taskId], references: [id])
  title       String
  duration    Int?
  status      TaskStatus  @default(PENDING)
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}